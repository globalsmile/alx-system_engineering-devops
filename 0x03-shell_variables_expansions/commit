#!/bin/bash

# Set the username and password (token)
username="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"
password="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"

# Function to read user input for commit message
read_commit_message() {
    read -p "Enter the commit message: " commit_message
}

# Function to perform Git push
git_push() {
    # Get the current working directory
    repository_path=$(git rev-parse --show-toplevel)

    # Set the branch name
    branch="master"

    # Change to the repository directory
    cd "$repository_path"

    # Add all modified and new files
    git add -A

    # Commit changes with the specified message
    git commit -m "$commit_message"

    # Configure Git to use the pre-saved username and password (token)
    git config credential.helper store <<<"https://$username:$password"

    # Push changes to the remote repository
    git push origin "$branch"
}

# Main script execution
read_commit_message
git_push



